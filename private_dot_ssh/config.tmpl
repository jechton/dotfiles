Host *
	HashKnownHosts yes

	Compression yes

	ServerAliveInterval 300

	# https://ghostty.org/docs/help/terminfo
	SetEnv TERM=xterm-256color

Host bunpi
	# {{ if eq .device_type "desktop" }}
    HostName bunpi.local
	# {{ else }}
	HostName bunpi
	# {{ end }}

Host opti
	HostName opti
	User driftwood
