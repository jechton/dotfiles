{
  "always_treat_brackets_as_autoclosed": true,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "auto_install_extensions": {
    "basher": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "ruff": true,
    "toml": true
  },
  "auto_signature_help": true,
  "buffer_font_family": "Iosevka Nerd Font",
  "buffer_font_size": 16,
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "file_types": {
    "Bash": [
      "sh.tmpl"
    ],
    "Fish": [
      "fish.tmpl"
    ]
  },
  "formatter": "prettier",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // Rainbow indents
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true
            // "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": [
        "basedpyright",
        "!pyright",
        "ruff"
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "extendSelect": [
              "I"
            ]
          }
        }
      }
    }
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "preferred_line_length": 120,
  "project_panel": {
    "dock": "right"
  },
  "soft_wrap": "preferred_line_length",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false,
    "env": {
      // Delta looks Bad in Zed's terminal
      "GIT_PAGER": "bat",
      // Use Zed as the default editor for terminal commands.
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    },
    "detect_venv": {
      "on": {
        "directories": [
          ".venv"
        ],
        "activate_script": "fish"
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "ui_font_family": "Inter Variable",
  "ui_font_size": 16
}
